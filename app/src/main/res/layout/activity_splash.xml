<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

        <TextView
            android:id="@+id/tvMyApartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156dp"
            android:text="My Apartment"
            android:textColor="@color/black"
            android:textSize="29dp"
            android:fontFamily="@font/gibson_semi_bold" />

        <Button
            android:id="@+id/buCreate"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_below="@+id/tvMyApartment"
            android:layout_marginTop="70dp"
            android:background="@drawable/blue_button"
            android:onClick="createClickEvent"
            android:text="Create Account"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:fontFamily="@font/gibson_regular" />

        <Button
            android:layout_below="@+id/buCreate"
            android:id="@+id/buLogin"
            android:layout_centerHorizontal="true"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/gray_button"
            android:onClick="loginClickEvent"
            android:text="Log in"
            android:textColor="@color/black1"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:visibility="invisible"
            android:fontFamily="@font/gibson_regular"
            />



        <Button
            android:id="@+id/tvHaveTrouble"
            android:layout_width="156dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_background"
            android:text="Having Trouble?"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="83dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:fontFamily="@font/gibson_regular"
            />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/my_progress_bar"
        android:indeterminateDrawable="@drawable/progress_bar"
        />


    <!--        android:indeterminateTint="@color/white" -->


</RelativeLayout>