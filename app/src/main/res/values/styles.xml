<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryDark">@color/black3</item>
        <item name="colorAccent">@color/black3</item>
        <item name="android:statusBarColor">@color/grayStatusBarBack</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="labels">
        <item name="android:textColor">@color/black3</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="descriptions">
        <item name="android:textColor">@color/black4</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
    </style>

    <style name="vCodeDigit">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily">@font/gibson_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">false</item>
    </style>

</resources>
