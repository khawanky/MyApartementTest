<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.us.singledigits.myapartment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.notifications.NotificationDetailsActivity"></activity>
        <activity android:name=".ui.notifications.NotificationsActivity" />
        <activity
            android:name=".ui.devices.PublicWifiActivity"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.devices.PrivateWifiActivity"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.devices.AddDeviceActivity" />
        <activity android:name=".ui.devices.DeviceInfoActivity" />

        <service
            android:name=".data.services.DevicesSocketService"
            android:exported="false" />

        <activity android:name=".ui.tvguide.TvguideActivity" />
        <activity android:name=".ui.thermostat.ThermostatActivity" />
        <activity android:name=".ui.lights.LightsActivity" />
        <activity android:name=".ui.devices.DevicesActivity" />
        <activity android:name=".ui.doors.DoorsActivity" />
        <activity android:name=".ui.menu.help.HelpInfoActivity" />
        <activity android:name=".ui.menu.myprofile.MyprofileActivity" />
        <activity android:name=".ui.menu.myapartment.MyapartmentActivity" />
        <activity android:name=".ui.menu.help.HelpActivity" />
        <activity android:name=".ui.menu.about.AboutActivity" />
        <activity android:name=".ui.menu.menu_list.MenuActivity" />
        <activity android:name=".ui.create_account.password.EnterPasswordActivity" />
        <activity android:name=".ui.create_account.email.EmailCheckerActivity" />
        <activity android:name=".ui.create_account.vcode.VerificationCodeActivity" />
        <activity android:name=".ui.create_account.information.AccountInfoActivity" />
        <activity android:name=".ui.home.HomePageActivity" />
        <activity
            android:name=".ui.login.ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>